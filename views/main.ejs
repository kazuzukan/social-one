<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('components/head.ejs') %>
  </head>
  <body>
    <header>
      <%- include('components/header.ejs') %>
    </header>

    <div class="container-fluid bg-3 text-center">
      <section>
        <div class="search-container">
          <div class="row">
            <div class="col-md-12 subtitle">
              <h2> <b>Sync all of your social media here</b> </h2>
            </div>
          </div>
          <div class="container-searchbar">
            <div class="row">
              <form method="POST" action="/search">
              <div class="col-md-3"></div>
              <div class="col-md-4 icon-search">
                  <input type="text" name="search" placeholder="search name or social media name">
              </div>
              <div class="col-md-1">
                <div class="select-style">
                  <button>
                  <select name="option" style="cursor: pointer;">
                    <option value="Name">Name</option>
                    <option value="Instagram">Instagram</option>
                    <option value="Facebook">Facebook</option>
                    <option value="Twitter">Twitter</option>
                    <option value="LinkedIn">LinkedIn</option>
                  </select>
                </button>
                </div>
               </div>
              <div class="col-md-1"> 
                <button type="submit"> Search </button>
              </div>
            </form>
            </div>
          </div>
       </div>
      </section>
     
      <br />
     <div class="container">
      <div class="row"> 
        <% values.forEach( value => { %>
        <div class="col-sm-4">
            <%- include('components/card.ejs', value) %>
        </div>
        <% }) %>
      </div>
      </div>
     </div>
    </div>
    <%- include('components/footer.ejs') %>
  </body>
  
</html>
